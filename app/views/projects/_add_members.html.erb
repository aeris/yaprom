<div id="members-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		<h3>Add members</h3>
	</div>
	<%= form_tag project_add_member_path(@project), class: %w(form-horizontal form-compact) do %>
		<div class="modal-body">
			<div class="control-group">
				<%= label_tag :members, 'Members', class: %w(control-label) %>
				<div class="controls">
					<input type="text" id="members" name="members" />
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
			<input type="submit" class="btn btn-primary" value="Add"/>
		</div>
	<% end %>
</div>
