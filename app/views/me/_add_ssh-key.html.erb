<div id="ssh-key-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		<h3>Add SSH key</h3>
	</div>
	<%= form_tag me_ssh_keys_path, multipart: true, class: %w(form-horizontal form-compact) do %>
		<div class="modal-body">
			<div class="control-group">
				<%= label_tag :ssh_key_content, 'SSH key', class: %w(control-label) %>
				<div class="controls">
					<%= text_area_tag :ssh_key_content, @content, placeholder: 'Paste your SSH key here' %>
				</div>
			</div>
			<div class="control-group">
				<%= label_tag :ssh_key_file, 'Upload file', class: %w(control-label) %>
				<div class="controls">
					<%= file_field_tag :ssh_key_file, title: 'Browse' %>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
			<input type="submit" class="btn btn-primary" value="Add"/>
		</div>
	<% end %>
</div>
