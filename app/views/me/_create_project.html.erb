<div id="project-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		<h3>New project</h3>
	</div>
	<%= form_for Project.new, html: {class: %w(form-horizontal form-compact)} do |f| %>
		<div class="modal-body">
			<div class="control-group">
				<%= f.label :name, 'Name', class: %w(control-label) %>
				<div class="controls">
					<%= f.text_field :name, required: true %>
				</div>
			</div>
			<div class="control-group">
				<%= f.label :uid, 'UID', class: %w(control-label) %>
				<div class="controls">
					<%= f.text_field :uid, required: true %>
				</div>
			</div>
			<div class="control-group">
				<%= f.label :description, 'Description', class: %w(control-label) %>
				<div class="controls">
					<%= f.text_area :description, rows: 5 %>
				</div>
			</div>
			<div class="control-group">
				<%= label_tag :scm, 'SCM', class: %w(control-label) %>
				<div class="controls">
					<%= select_tag 'project[scm]', options_for_select(
							[['Git', :git, 'data-image' => image_path('git.png')],
							 ['SVN', :svn, 'data-image' => image_path('svn.png')]]) %>
				</div>
			</div>
			<div class="control-group">
				<div class="controls">
					<%= f.label :private, class: %w(checkbox) do %>
						<%= f.check_box :private %>
						Private
					<% end %>
				</div>
			</div>
			<%= f.hidden_field :owner, value: @me.uid %>
		</div>
		<div class="modal-footer">
			<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
			<input type="submit" class="btn btn-primary" value="Create"/>
		</div>
	<% end %>
</div>
