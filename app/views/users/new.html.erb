<%= render 'application/errors', object: @user %>
<%= form_for @user, url: users_path, html: { class: %w(well form-horizontal form-compact span5 center) } do |f| %>
	<%= field_set_tag 'Sign in' do %>
		<div class="control-group">
			<%= f.label :common_name, 'Common name', class: %w(control-label) %>
			<div class="controls">
				<%= f.text_field :common_name, placeholder: 'John', required: true %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :surname, 'Surname', class: %w(control-label) %>
			<div class="controls">
				<%= f.text_field :surname, placeholder: 'Doe', required: true %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :uid, 'UID', class: %w(control-label) %>
			<div class="controls">
				<%= f.text_field :uid, placeholder: 'jdoe', required: true %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :password, 'Password', class: %w(control-label) %>
			<div class="controls">
				<%= f.password_field :password, required: true %>
			</div>
		</div>
		<div class="control-group">
			<%= label_tag :password_confirmation, 'Confirm password', class: %w(control-label) %>
			<div class="controls">
				<%= f.password_field :password_confirmation, required: true %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :email, 'Email', class: %w(control-label) %>
			<div class="controls">
				<%= f.email_field :email, placeholder: "john.doe@#{YamlConfig['email.domain']}", required: true,
								  data: { domain: YamlConfig['email.domain'] }  %>
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<%= f.submit 'Sign in', class: %w(btn btn-primary pull-right) %>
			</div>
		</div>
	<% end %>
<% end %>
