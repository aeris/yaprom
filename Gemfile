source 'https://rubygems.org'

gem 'rails'
gem 'thin'

group :production do
	gem 'pg'
end

group :test, :development do
	gem 'sqlite3'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
	gem 'sass-rails'
	gem 'coffee-rails'
	gem 'normalize-rails'
	gem 'jquery-rails'
	gem 'jquery-ui-rails'
	gem 'bootstrap-sass'
	gem 'font-awesome-rails'

	gem 'therubyracer', :platforms => :ruby
	gem 'uglifier'
end

gem 'net-ldap'
gem 'net-ssh'

